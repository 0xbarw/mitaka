{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "strict": true,
        "rootDirs": [
            "src",
            "test"
        ],
        "outDir": "dist/js",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "noEmitOnError": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}